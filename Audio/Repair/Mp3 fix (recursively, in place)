#!/usr/bin/env bash

# Import the script 'common-functions.sh'
SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)
ROOT_DIR=$(echo "$SCRIPT_DIR" | grep --only-matching "^.*scripts[^/]*")
source "$ROOT_DIR/common-functions.sh"

# Initial checks
_check_dependencies "mp3val"
_display_wait_box
INPUT_FILES=$(_get_files "$*" "type=file_recursive; mime=audio/mpeg; skip_extension=bak")

_main_task() {
    local INPUT_FILE=$1
    local OUTPUT_DIR=$2
    local BACKUP_FILE=""
    local OUTPUT_FILE=""
    local STD_OUTPUT=""
    local TEMP_FILE=""

    # Work on a temporary file
    TEMP_FILE=$(mktemp --tmpdir="$TEMP_DIR_TASK")
    STD_OUTPUT=$(cp --archive "$INPUT_FILE" "$TEMP_FILE" 2>&1)
    _check_result "$?" "$STD_OUTPUT" "$INPUT_FILE" "" || return 1

    # Run the main process
    STD_OUTPUT=$(mp3val -si -f "$TEMP_FILE" 2>&1)
    _check_result "$?" "$STD_OUTPUT" "$INPUT_FILE" "" || return 1

    # Move the temporary file to the output
    OUTPUT_FILE=$INPUT_FILE
    _move_temp_file_to_output "$INPUT_FILE" "$TEMP_FILE" "$OUTPUT_FILE" || return 1

    # Remove the temporary files on each iteration (if not removed before)
    rm -rf "$TEMP_FILE"
}

_run_main_task_parallel "$INPUT_FILES" ""
_display_result_box ""
