#!/usr/bin/env bash

# Import the script 'common-functions.sh'
SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)
ROOT_DIR=$(grep --only-matching "^.*scripts[^/]*" <<<"$SCRIPT_DIR")
source "$ROOT_DIR/common-functions.sh"

# Initial checks
_check_dependencies "git xclip"
_display_wait_box
input_files=$(_get_files "$*" "type=directory; max_files=1; get_pwd_if_no_selection=true")
output_dir=$input_files

_get_repositories_from_clipboard() {
    local repositories=""

    repositories+=$(xclip -quiet -selection primary -o)
    repositories+=$'\n'
    repositories+=$(xclip -quiet -selection secondary -o)
    repositories+=$'\n'
    repositories+=$(xclip -quiet -selection clipboard -o)
    repositories+=$'\n'
    repositories=$(sort -u <<<"$repositories")
    repositories=$(grep "/" <<<"$repositories")
    repositories=$(grep "\.git" <<<"$repositories")
    repositories=$(sed -z "s|\n|$FILENAME_SEPARATOR|g" <<<"$repositories")
    repositories=${repositories%"$FILENAME_SEPARATOR"}

    if [[ -z "$repositories" ]]; then
        _display_error_box "Error: there are GIT repositories in the clipboard!"
        _exit_script
    fi

    echo "$repositories"
}

_main_task() {
    local input_file=$1
    local output_dir=$2
    local std_output=""

    cd "$output_dir" || return 1

    # Run the main process
    std_output=$(git clone -q -- "$input_file" 2>&1)
    _check_result "$?" "$std_output" "$input_file" "" || return 1
}

_run_main_task_parallel "$(_get_repositories_from_clipboard)" "$output_dir"
_display_result_box "$output_dir"
